# Front-Controller-Konfiguration f端r Apache

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Authorization-Header f端r PHP/FPM verf端gbar machen
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Vorhandene Dateien/Verzeichnisse direkt ausliefern
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Alle 端brigen Requests an den Front-Controller weiterleiten
    RewriteRule ^ index.php [L,QSA]
</IfModule>

# Zugriff auf sensible/versteckte Dateien verhindern
<FilesMatch "^\.">
    Require all denied
</FilesMatch>
